<%= form_for(@race) do |r| %>
  <% if @race.errors.any? %>
    <% @race.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Character Share", sticky: false ) %>
      <% end %>
    <% end %>

  <div class="form-group">
    <%= r.label :race_name %>
    <%= r.text_field :race_name, class: 'form-control', width: '50%' %>
  </div>

  <div class="form-group">
    <%= r.label :race_description %>
    <%= r.text_area :race_description, class: 'form-control', rows: 5, width: '50%' %>
  </div>

<div class="form-group">
  <h3>Traits</h3> 
    <%= r.fields_for :traits do |trait| %>
      <%= render 'trait_fields', f: trait %>
    <% end %>

     <div>
        <%= link_to_add_association 'Add Trait', r, :traits, class: 'btn btn-md btn-secondary' %>
      </div>
</div>
      

  <div class="form-group">
    <%= r.submit 'Save Race', class: 'btn btn-primary btn-block' %>
  </div>

<% end %>

<div><%= link_to 'Back', admin_dashboard_path, class: 'btn btn-warning btn-block' %></div>