<%= form_for(@race) do |r| %>
  <% if @race.errors.any? %>
    <% @race.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Character Share", sticky: false ) %>
      <% end %>
    <% end %>

  <div>
    <%= r.label :race_name %>
    <%= r.text_field :race_name %>
  </div>

  <div>
    <%= r.label :race_description %>
    <%= r.text_field :race_description %>
  </div>

  <h3>Traits</h3> 
    <%= r.fields_for :traits do |trait| %>
      <%= render 'trait_fields', f: trait %>
    <% end %>

     <div>
        <%= link_to_add_association 'Add Trait', r, :traits %>
      </div>

  <div>
    <%= r.submit 'Save Race' %>
  </div>

<% end %>

<div><%= link_to 'Back', admin_dashboard_path %></div>