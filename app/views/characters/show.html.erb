<div class="container show-container">
  <div class="card">

<% if @character.personal? %>
  <h3>This character is Private</h3>
<% elsif @character.published? %>
  <h3>This character is Public</h3>
<% end %>
<h2><%= @character.name %></h2>
<div class="row">
  <div class="col-md-3">
<h5><a tabindex="0" class="pop-link" data-placement="right" role="label" data-toggle="popover" data-trigger="focus" title="<%= @character.race.race_name %>" data-content="<%= @character.race.race_description %>"><%= @character.race.race_name %></a></h5>
<h5><a tabindex="0" class="pop-link" data-placement="right" role="lable" data-toggle="popover" data-trigger="focus" title="<%= @character.character_class.title %>" data-content="<%= @character.character_class.description %>"><%= @character.character_class.title %>, Level <%= @character.level %></a></h5>
<div class="stat-box card"><div>AC</div><div><%= @character.armor_class %></div></div>
<div class="stat-box card"><div>Initiative</div><div><%= @character.initiative %></div></div>
<div class="stat-box card"><div>Speed</div><div><%= @character.speed %></div></div>

</div>
<div class="col-md-5">
<% @character.stats.recent.each do |stat| %>
<div class="stat-block card stat-box">
    <div><%= stat.name %></div> <div><%= stat.score %></div> <div><%= stat.modifier %></div>
  </div>
<% end %>
</div>

<div class="col-md-4 char-img">
  <div><%= image_tag character_img(@character.character_image), width: '100%', style: 'margin-right:20px;', alt: 'character image' %></div>
</div>
</div>


    
  <h3>Class Features</h3>
  <ul>
  <% @character.character_class.features.each do |feature| %>
    <% if  @character.level >= feature.level %>
      <li>
        <%= feature.name %> Level: <%= feature.level %>, <%= feature.description %> 
      </li>
      <br>
    <% end %>
  <% end %>
</ul>

  <h3>Racial Traits</h3>
  <ul>
  <% @character.race.traits.each do |trait| %>
    <% if  @character.level >= trait.level %>
      <li>
        <%= trait.name %> Level: <%= trait.level %>, <%= trait.description %> 
      </li>
      <br>
    <% end %>
  <% end %>
</ul>




<div>
  <% if logged_in?(:site_admin) %>
    <div><%= link_to "Edit Character", edit_character_path(@character) %></div>
    <div><%= link_to 'Delete Character', @character, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  <% elsif current_user.id == @character.user_id %>
    <div><%= link_to "Edit Character", edit_character_path(@character) %></div>
    <div><%= link_to 'Delete Character', @character, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  <% end %>
  <div><%= link_to 'Back', characters_path %></div>
</div>

</div>
</div>