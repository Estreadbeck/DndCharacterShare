<%= form_for(@character) do |c| %>
  <% if character.errors.any? %>
    <% character.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Character Share", sticky: false ) %>
      <% end %>
    <% end %>

  <div>
    <%= c.label :name %>
    <%= c.text_field :name %>
  </div>

  <div>
    <%= c.label :race %>
    <%= c.collection_select(:race_id, Race.all, :id, :race_name,
                            {
                              include_blank: false,

                            },
                            class: 'form-control'
                            ) %> 
  </div>

  <div class="form-group">
    <%= c.label :character_class_id %>
    <%= c.collection_select(:character_class_id, CharacterClass.all, :id, :title,
                            {
                              include_blank: false,

                            },
                            class: 'form-control'
                            ) %>   

  </div>

  <div>
    <%= c.label :level %>
    <%= c.number_field :level %>
  </div>
  <h3>Stats</h3>
  <ul> 
    <%= c.fields_for :stats do |s| %>
    <li>
      <div>
        <%= s.label :name %>
        <%= s.text_field :name %>
          
      </div>

      <div>
        <%= s.label :score %>
        <%= s.number_field :score %>
      </div>

      <div>
        <%= s.label :modifier %>
        <%= s.text_field :modifier %>
      </div>
  </li>
  <br>
    <% end %>

  </ul>
  <div>
    <%= c.label :backstory %>
    <%= c.text_field :backstory %>
  </div>

  <div>
    Upload a character image: <%= c.file_field :character_image, display: true %>
  </div>

  <div class="form-group">
    <%= c.radio_button :status, 'personal' %>
    <%= c.label :status, 'Personal' %>
    <%= c.radio_button :status, 'published' %>
    <%= c.label :status, 'Published' %>
  </div>

  <div>
    <%= c.submit 'Save Character' %>
  </div>

<% end %>

<div><%= link_to 'Back', characters_path %></div>