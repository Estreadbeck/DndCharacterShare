<%= form_for(@character_class) do |c| %>
 <% if @character_class.errors.any? %>
    <% @character_class.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Character Share", sticky: false ) %>
      <% end %>
    <% end %>

  <div class="form-group">
    <%= c.label :title %>
    <%= c.text_field :title, class: 'form-control', width: '50%' %>
  </div>

  <div class="form-group">
    <%= c.label :description %>
    <%= c.text_area :description, class: 'form-control', rows: 5, width: '50%' %>
  </div>

  <div class="form-group">
  <h3>Features</h3> 
    <%= c.fields_for :features do |f| %>
      <%= render 'feature_fields', f: f %>
    <% end %>

     <div>
        <%= link_to_add_association 'Add Feature', c, :features, class: 'btn btn-md btn-secondary' %>
      </div>
    </div>

  <div class="form-group">
    <%= c.submit 'Save Class', class: 'btn btn-primary btn-block' %>
  </div>

<% end %>

<div><%= link_to 'Back', admin_dashboard_path, class: 'btn btn-warning btn-block' %></div>
